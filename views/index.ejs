      molix.logging.lastError = 'MOLIX_scriptcrash';
      molix.logging.lastErrorDetails = error;
      await winmngr.createErrorWindow({
        title: `<span class="error">${molix.logging.lastError}</span>`,
        content: `Some script in Molix is crashed with error.<br>Last error: ${molix.logging.lastError} ${error}<br>${url}<br>line:column - ${lineNo}:${columnNo}`,
        id: winmngr.randomPID(),
        classes: 'text-center',
        after: molix.reportError()
      });
    });
